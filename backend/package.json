{
  "name": "template-backend",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "lint": "eslint --ext .ts src/",
    "dev": "bun run --watch index.ts",
    "start": "bun run index.ts",
    "infra": "bun run docker:dev",
    "docker:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build && open http://localhost:3000",
    "docker:prod": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build",
    "sync": "bun run bin/sync.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "open": "^10.1.0",
    "postcss": "^8",
    "prettier": "^3.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "graphql": "^16.9.0",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^5.7.0",
    "typeorm": "^0.3.20"
  }
}
